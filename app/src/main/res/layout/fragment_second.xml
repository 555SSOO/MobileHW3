<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_fragment_second_filter_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:hint="Search by name" />

    <EditText
        android:id="@+id/et_fragment_second_filter_year"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/et_fragment_second_filter_name"
        android:hint="Year"/>

    <EditText
        android:id="@+id/et_fragment_second_filter_score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/et_fragment_second_filter_year"
        android:hint="Min score" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragment_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_fragment_second_filter_name"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_fragment_second_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data" />

</RelativeLayout>