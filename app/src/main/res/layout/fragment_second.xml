<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_fragment_second_filter_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:hint="Search by name" />

    <EditText
        android:id="@+id/et_fragment_second_filter_year"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/et_fragment_second_filter_name"
        android:hint="Year"/>

    <EditText
        android:id="@+id/et_fragment_second_filter_score"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/et_fragment_second_filter_year"
        android:hint="Min score" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fragment_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/et_fragment_second_filter_name"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_fragment_second_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fragment_second_refresh"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_refresh_black_24dp"
        app:borderWidth="0dp" />

</RelativeLayout>