<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:paddingEnd="20dp"
    android:layout_marginTop="10dp"
    android:paddingStart="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_list_item"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_list_item_name"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        tools:text="Name"/>

    <TextView
        android:id="@+id/tv_list_item_year"
        android:layout_below="@+id/tv_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:text="Year"/>

    <TextView
        android:id="@+id/tv_list_item_director"
        android:layout_below="@+id/tv_list_item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        tools:text="Director"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_list_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        tools:text="Score"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/btn_list_item_see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:text="@string/see_more"
        android:layout_below="@id/iv_list_item"/>

</RelativeLayout>